<!-- Header starts -->
<header class="page">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<!-- Logo. Use class "color" to add color to the text. -->
				<div class="logo">
					<img src="/img/logo.png" />
				</div>
			</div>
			<div class="col-md-4 col-md-offset-4">

				<!-- Search form -->
				<form role="form" style="visibility:hidden">
					<div class="input-group">
						<input type="email" class="form-control" id="search1" placeholder="Search">
						<span class="input-group-btn">
							<button type="submit" class="btn btn-default">Search</button>
						</span>
					</div>
				</form>

				<div class="hlinks">
					<span>
						<!-- item details with price -->
						<a href="#cart" role="button" data-toggle="modal">
							0 Item(s) in your <i class="fa fa-shopping-cart"></i>
						</a> - <span class="bold">R0.00</span>  
					</span>
					<!-- Login and Register link -->
					<span class="lr"><a href="#login" role="button" data-toggle="modal">Login</a>
					or <a href="#register" role="button" data-toggle="modal">Register</a></span>
				</div>

			</div>
		</div>
	</div>
</header>
<!--/ Header ends -->