<div class="item">
	<!-- Item image -->
	<div class="item-image">
	  <a href="/shop/{{cat1}}/{{cat2}}/{{item.product_name|urlify}}"><img src="/img/photos/4.png" alt="" class="img-responsive" /></a>
	</div>
	<!-- Item details -->
	<div class="item-details">
	  <!-- Name -->
	  <h5><a href="/shop/{{cat1}}/{{cat2}}/{{item.product_name|urlify}}">{{item.product_name}}</a>{% if item.product_flag %}<span class="ico"><img src="img/{{item.product_flag|lower}}.png" alt="" /></span>{% endif %}</h5>
	  <!-- Para. Note more than 2 lines. -->
	  <p>{{item.description}}</p>
	  <hr />
	  <!-- Price -->
	  <div class="item-price pull-left">{{item.price|currency}}</div>
	  <!-- Add to cart -->
	  <div class="button pull-right"><a href="#">Add to Cart</a></div>
	  <div class="clearfix"></div>
	</div>
</div>
